                        android:layout_width="100dip"
                        android:layout_height="25dip"
                        android:layout_alignTop="@+id/Player2ImageView"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="4dip"
                        android:layout_toRightOf="@+id/Player2ImageView"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceMedium"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/Player2ScoreTextView"
                        android:layout_width="40dip"
                        android:layout_height="35dip"
                        android:layout_below="@+id/Player2NameTextView"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/Player2ImageView"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceMedium"
                        android:textColor="?attr/primaryTextColor" />

                    <TextView
                        android:id="@+id/Player2TotalFeeTextView"
                        android:layout_width="100dip"
                        android:layout_height="35dip"
                        android:layout_below="@+id/Player2NameTextView"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/Player2ScoreTextView"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceMedium"
                        android:textColor="?attr/primaryTextColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Player3View"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_below="@+id/Player2View"
                    android:layout_marginTop="4dp" >

                    <View
