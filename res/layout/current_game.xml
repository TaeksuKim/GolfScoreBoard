                        android:textColor="?attr/primaryTextColor" />

                    <TextView
                        android:id="@+id/Player4TotalFeeTextView"
                        android:layout_width="100dip"
                        android:layout_height="35dip"
                        android:layout_below="@+id/Player4NameTextView"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/Player4ScoreTextView"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceMedium"
                        android:textColor="?attr/primaryTextColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Player5View"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_below="@+id/Player4View"
                    android:layout_marginTop="4dp" >

                    <View
                        android:id="@+id/Player5TagView"
                        android:layout_width="match_parent"
                        android:layout_height="25dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="4dip"
                        android:background="#ccff4444" />

                    <ImageView
                        android:id="@+id/Player5ImageView"
                        android:layout_width="80dip"
                        android:layout_height="60dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dip"
